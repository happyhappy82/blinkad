---
import Layout from '../layouts/Layout.astro';

const siteUrl = "https://blinkad.co.kr";

const caseStudies = [
  {
    id: 'dental',
    client: '명동 **치과',
    industry: '의료/치과',
    location: '서울 명동',
    metric: '유기적 트래픽',
    value: '+380%',
    period: '6개월',
    description: '명동 중심가 치과의원의 구글 검색 노출 최적화 프로젝트. "명동 치과", "명동 임플란트" 등 핵심 키워드 1페이지 진입 달성.',
    results: [
      { label: '검색 노출', value: '+380%' },
      { label: '전화 문의', value: '+220%' },
      { label: '신규 예약', value: '+150%' }
    ],
    keywords: ['명동 치과', '명동 임플란트', '명동 치아교정'],
    color: 'blue'
  },
  {
    id: 'derma',
    client: '강남 **피부과',
    industry: '의료/피부과',
    location: '서울 강남',
    metric: '신규 문의',
    value: '+450%',
    period: '4개월',
    description: '강남 지역 경쟁이 치열한 피부과 시장에서 SEO를 통한 차별화 전략 실행. 지도 검색 상위 노출과 블로그 콘텐츠 전략으로 브랜드 인지도 상승.',
    results: [
      { label: '지도 노출', value: '1위' },
      { label: '웹사이트 방문', value: '+450%' },
      { label: '온라인 예약', value: '+280%' }
    ],
    keywords: ['강남 피부과', '강남 여드름', '강남 레이저'],
    color: 'purple'
  },
  {
    id: 'restaurant',
    client: '강서 **횟집',
    industry: '요식업/횟집',
    location: '서울 강서',
    metric: '지도 전화문의',
    value: '3.5x',
    period: '3개월',
    description: '지역 맛집으로 자리잡기 위한 로컬 SEO 집중 프로젝트. 구글 지도 최적화와 리뷰 관리를 통해 지역 내 검색 1위 달성.',
    results: [
      { label: '지도 검색', value: '1위' },
      { label: '전화 문의', value: '3.5x' },
      { label: '평점 상승', value: '4.2→4.8' }
    ],
    keywords: ['강서 횟집', '강서 회', '강서 맛집'],
    color: 'green'
  }
];

// Case Studies Schema
const caseStudiesSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Blink Ad 성공사례",
  "description": "구글 SEO 상위노출을 통한 실제 비즈니스 성공사례",
  "url": `${siteUrl}/case-studies`,
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": caseStudies.length,
    "itemListElement": caseStudies.map((study, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "name": study.client,
      "description": study.description
    }))
  }
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "홈", "item": siteUrl },
    { "@type": "ListItem", "position": 2, "name": "성공사례", "item": `${siteUrl}/case-studies` }
  ]
};
---

<Layout
  title="성공사례 - Blink Ad | SEO 상위노출 실제 결과"
  description="명동 치과, 강남 피부과, 강서 횟집 등 실제 고객사의 구글 SEO 상위노출 성공사례. 검색 트래픽 380% 증가, 신규 문의 450% 증가 달성."
  canonical={`${siteUrl}/case-studies`}
>
  <script type="application/ld+json" set:html={JSON.stringify(caseStudiesSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <div class="min-h-screen bg-black text-white">
    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-md border-b border-white/5">
      <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
        <a href="/" class="text-xl font-semibold tracking-tight hover:text-gray-300 transition-colors">Blink Ad</a>
        <div class="flex items-center gap-8">
          <a href="/" class="text-sm text-gray-400 hover:text-white transition-colors">Home</a>
          <a href="/services" class="text-sm text-gray-400 hover:text-white transition-colors">서비스</a>
          <a href="/case-studies" class="text-sm text-white" aria-current="page">성공사례</a>
          <a href="https://blog.blinkad.kr" class="text-sm text-gray-400 hover:text-white transition-colors">Blog</a>
        </div>
      </div>
    </nav>

    <!-- Header -->
    <header class="pt-32 pb-16 px-6">
      <div class="max-w-4xl mx-auto text-center">
        <nav aria-label="breadcrumb" class="mb-8">
          <ol class="flex items-center justify-center text-sm text-gray-500">
            <li><a href="/" class="hover:text-white transition-colors">홈</a></li>
            <li class="mx-2">/</li>
            <li class="text-gray-400" aria-current="page">성공사례</li>
          </ol>
        </nav>
        <h1 class="text-5xl md:text-6xl font-bold mb-6">Case Studies.</h1>
        <p class="text-xl text-gray-500 keep-all">
          실제 고객사의 검색 순위 상승과 비즈니스 성장 이야기
        </p>
      </div>
    </header>

    <!-- Case Studies -->
    <main class="max-w-6xl mx-auto px-6 pb-24">
      <div class="space-y-24">
        {caseStudies.map((study, index) => (
          <article id={study.id} class="relative">
            <!-- Background Gradient -->
            <div class={`absolute inset-0 bg-gradient-to-r ${
              study.color === 'blue' ? 'from-blue-500/10' :
              study.color === 'purple' ? 'from-purple-500/10' :
              'from-green-500/10'
            } to-transparent rounded-3xl -z-10`}></div>

            <div class="bg-white/5 rounded-3xl border border-white/10 overflow-hidden">
              <!-- Header -->
              <div class="p-8 md:p-12 border-b border-white/10">
                <div class="flex flex-wrap items-center gap-4 mb-6">
                  <span class={`px-3 py-1 rounded-full text-sm font-medium ${
                    study.color === 'blue' ? 'bg-blue-500/20 text-blue-400' :
                    study.color === 'purple' ? 'bg-purple-500/20 text-purple-400' :
                    'bg-green-500/20 text-green-400'
                  }`}>
                    {study.industry}
                  </span>
                  <span class="text-gray-500 text-sm">{study.location}</span>
                  <span class="text-gray-500 text-sm">• {study.period}</span>
                </div>

                <h2 class="text-3xl md:text-4xl font-bold mb-4">{study.client}</h2>
                <p class="text-gray-400 text-lg keep-all">{study.description}</p>
              </div>

              <!-- Results -->
              <div class="p-8 md:p-12">
                <h3 class="text-lg font-semibold text-gray-400 mb-6">주요 성과</h3>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                  {study.results.map((result) => (
                    <div class="text-center p-6 bg-white/5 rounded-xl">
                      <div class={`text-4xl md:text-5xl font-bold mb-2 ${
                        study.color === 'blue' ? 'text-blue-400' :
                        study.color === 'purple' ? 'text-purple-400' :
                        'text-green-400'
                      }`}>
                        {result.value}
                      </div>
                      <div class="text-gray-500">{result.label}</div>
                    </div>
                  ))}
                </div>

                <h3 class="text-lg font-semibold text-gray-400 mb-4">타겟 키워드</h3>
                <div class="flex flex-wrap gap-2">
                  {study.keywords.map((keyword) => (
                    <span class="px-3 py-1 bg-white/10 rounded-full text-sm text-gray-300">
                      {keyword}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>
    </main>

    <!-- CTA Section -->
    <section class="py-20 border-t border-white/10">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 keep-all">다음 성공사례의 주인공이 되세요</h2>
        <p class="text-gray-400 mb-8 keep-all">무료 SEO 진단으로 귀하의 비즈니스 성장 가능성을 확인해 보세요.</p>
        <a
          href="/#contact"
          class="inline-flex items-center justify-center px-8 py-4 bg-brand-blue text-white font-semibold rounded-full hover:bg-blue-600 transition-colors"
        >
          무료 진단 신청하기
        </a>
      </div>
    </section>

    <!-- Footer -->
    <footer class="border-t border-white/10 py-12">
      <div class="max-w-7xl mx-auto px-6 text-center">
        <a href="/" class="text-xl font-semibold tracking-tight mb-4 inline-block">Blink Ad</a>
        <p class="text-gray-500 text-sm">Premium SEO Agency</p>
        <p class="text-gray-600 text-xs mt-4">&copy; {new Date().getFullYear()} Blink Ad. All rights reserved.</p>
      </div>
    </footer>
  </div>
</Layout>
