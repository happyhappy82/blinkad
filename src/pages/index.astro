---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import Hero from '../components/Hero';
import Services from '../components/Services';
import CaseStudies from '../components/CaseStudies';
import Contact from '../components/Contact';
import Footer from '../components/Footer';
---

<Layout title="Blink Ad - Premium SEO Agency">
  <div class="min-h-screen bg-black text-white selection:bg-brand-blue selection:text-white">
    <Navbar client:load />

    <main>
      <Hero client:load />
      <Services client:load />
      <CaseStudies client:load />

      <!-- Blog Preview Section -->
      <section id="blog" class="py-32 bg-black border-t border-white/5">
        <div class="max-w-7xl mx-auto px-6 text-center">
          <h2 class="text-4xl md:text-5xl font-bold mb-6">Insights.</h2>
          <p class="text-xl text-gray-500 mb-12 keep-all">
            검색 엔진 최적화(SEO)부터 디지털 브랜딩 전략까지.
          </p>
          <a
            href="https://blog.blinkad.kr"
            class="inline-flex items-center gap-2 text-brand-blue hover:text-blue-400 text-lg font-medium transition-colors group"
          >
            블로그 보기
            <span class="group-hover:translate-x-1 transition-transform">→</span>
          </a>
        </div>
      </section>

      <Contact client:load />
    </main>

    <Footer client:load />
  </div>
</Layout>
